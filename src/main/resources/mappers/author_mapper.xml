<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.korit.springboot_study.mapper.AuthorMapper">
    <resultMap id="authorResultMap" type="com.korit.springboot_study.entity.Author">
        <id property="authorId" column="author_id" />
        <result property="authorName" column="author_name" />
    </resultMap>

    <select id="selectAuthorAll" resultMap="authorResultMap">
        select *
        from author_tb
    </select>

    <select id="selectAuthorByName" resultMap="authorResultMap">
        select *
        from author_tb
        where author_name like concat("%", #{authorName}, "%")
    </select>

    <insert id="insertAuthor" keyProperty="authorId" useGeneratedKeys="true">
        insert into author_tb
        values (default, #{authorName})
    </insert>

</mapper>