<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.korit.springboot_study.mapper.CategoryMapper">
    <resultMap id="categoryResultMap" type="com.korit.springboot_study.entity.Category">
        <id property="categoryId" column="category_id" />
        <result property="categoryName" column="category_name" />
    </resultMap>

    <select id="selectCategoryAll" resultMap="categoryResultMap">
        select *
        from category_tb
    </select>

    <select id="selectCategoryByName" resultMap="categoryResultMap">
        select *
        from category_tb
        where category_name like concat("%", #{categoryName}, "%")
    </select>

    <insert id="insertCategory" keyProperty="categoryId" useGeneratedKeys="true">
        insert into category_tb
        values (default, #{categoryName})
    </insert>

</mapper>